#!/usr/bin/env bash

set -e
[ -n "$RBENV_DEBUG" ] && set -x

if [ "$1" = "--version" ] || [ "$1" = "-v" ]; then
  echo "rbenv-jit 0.4.0"
  exit
fi

version=$(echo $RBENV_VERSION | tr -d '.' | cut -c 1-2)

if [[ $version -gt "25" ]]; then
  # macOS と 3.1 以降の場合は未対応なので --yjit にする
  if [[ $(uname) == "Darwin" ]]; then
    if [[ $version -gt "31" ]]; then
      echo "export RUBYOPT=--yjit"
    else
      echo "export RUBYOPT=--jit"
    fi
  else
    echo "export RUBYOPT=--jit"
  fi
fi
